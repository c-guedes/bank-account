<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultInputText">
        <item name="android:background">@drawable/login_input_style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_width">@dimen/default_match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">@dimen/default_padding_start</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/default_match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_layout_margin_buttom</item>
        <item name="android:layout_marginEnd">@dimen/default_layout_margin_buttom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="MyBankLogoStyle">
        <item name="srcCompat">@drawable/bank_logo</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginStart">126dp</item>
        <item name="android:layout_marginEnd">126dp</item>
    </style>

</resources>
